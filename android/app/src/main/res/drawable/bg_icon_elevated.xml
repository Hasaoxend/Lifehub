<?xml version="1.0" encoding="utf-8"?>
<!-- Elevated background for icons to stand out on any background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20000000" />
            <size
                android:width="44dp"
                android:height="44dp" />
        </shape>
    </item>
    <!-- Main background layer -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
</layer-list>
