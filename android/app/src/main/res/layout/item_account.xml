<?xml version="1.0" encoding="utf-8"?>
<!--
  Giao diện cho MỘT HÀNG (row) trong danh sách tài khoản.
  Được sử dụng bởi AccountAdapter.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Icon cho dịch vụ -->
    <ImageView
        android:id="@+id/iv_service_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_lock"
        tools:srcCompat="@drawable/ic_lock" />

    <!-- Tên Dịch vụ (Google, Facebook...) -->
    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_service_icon"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Tên Dịch vụ" />

    <!-- Tên Đăng nhập (email@example.com) -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_service_icon"
        android:layout_below="@id/tv_service_name"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="?android:attr/textColorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="username.email@example.com" />

</RelativeLayout>