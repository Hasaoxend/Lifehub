<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.test.lifehub"> <!-- ✅ Tên package chính xác -->

    <!--
      SỬA LỖI: THÊM QUYỀN INTERNET
      Bắt buộc phải có để Firebase (Auth, Firestore, v.v.) kết nối
    -->
    <uses-permission android:name="android.permission.INTERNET" />


    <!-- 2. Quyền BẮT BUỘC cho Vân tay -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- 3. Các quyền BẮT BUỘC cho Nhắc nhở (Notifications & Alarms) -->
    <!-- (Cho Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- (Cho Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!-- (Cho các phiên bản cũ hơn và để đánh thức thiết bị) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".core.LifeHubApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lifehub"
        tools:targetApi="31">

        <!-- ✅ LAUNCHER ACTIVITY (Màn hình Khởi chạy) -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Các Activity giao diện (UI) chính -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RegisterEmailActivity"
            android:exported="false" />

        <!-- Activity cho Deep Link (mở từ Email) -->
        <activity
            android:name=".ui.CreatePasswordActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--
                  QUAN TRỌNG: "lifehub.page.link" là placeholder.
                  Bạn phải tạo link này trong Firebase Console (Auth > Templates > Email verify)
                -->
                <data
                    android:scheme="https"
                    android:host="lifehub.page.link" />
            </intent-filter>
        </activity>

        <!--
          SỬA LỖI: Sửa tên package Java
          Tên package Java không được bắt đầu bằng số (one_ / two_)
        -->

        <!-- Activity của Module Tài khoản -->
        <activity
            android:name=".features.one_accounts.ui.AddEditAccountActivity"
            android:exported="false" />

        <!-- Activity của Module Năng suất -->
        <activity
            android:name=".features.two_productivity.ui.AddEditNoteActivity"
            android:exported="false" />

        <!-- Khai báo Service Nhắc nhở -->
        <service
            android:name=".core.services.ReminderService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>