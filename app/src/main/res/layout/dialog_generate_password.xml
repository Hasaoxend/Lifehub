<?xml version="1.0" encoding="utf-8"?>
<!-- Giao diện cho Hộp thoại Tạo Mật khẩu -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tùy chọn Tạo Mật khẩu"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Ô hiển thị mật khẩu được tạo -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_generated_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_copy"
        app:endIconContentDescription="Sao chép Mật khẩu">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_generated_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu đã tạo"
            android:focusable="false"
            android:clickable="false"
            tools:text="S@mP1e_P@$sw0rd" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_regenerate"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Tạo lại"
        app:icon="@drawable/ic_refresh" />

    <!-- Thanh trượt chọn Độ dài -->
    <TextView
        android:id="@+id/tv_length_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/password_length_format"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="8"
        android:valueTo="30"
        android:stepSize="1"
        android:value="16" />

    <!-- Các Checkbox Tùy chọn -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cb_uppercase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bao gồm Chữ hoa (A-Z)"
        android:checked="true" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cb_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bao gồm Số (0-9)"
        android:checked="true" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cb_symbols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bao gồm Ký tự đặc biệt (!@#$)"
        android:checked="true" />

    <!-- Nút Chọn -->
    <Button
        android:id="@+id/btn_select_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Chọn mật khẩu này" />

</LinearLayout>
