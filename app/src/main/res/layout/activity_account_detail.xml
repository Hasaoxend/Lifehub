<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".features.one_accounts.ui.AccountDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_account_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_account_detail" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Service Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên dịch vụ"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/tv_detail_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                tools:text="Google" />

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?android:attr/textColorSecondary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_detail_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    tools:text="user@example.com" />

                <ImageButton
                    android:id="@+id/btn_copy_username"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_copy"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sao chép tên đăng nhập" />

            </LinearLayout>

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?android:attr/textColorSecondary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_detail_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:fontFamily="monospace"
                    tools:text="●●●●●●●●" />

                <ImageButton
                    android:id="@+id/btn_toggle_password"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_visibility"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Hiện/Ẩn mật khẩu" />

                <ImageButton
                    android:id="@+id/btn_copy_password"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_copy"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sao chép mật khẩu" />

            </LinearLayout>

            <!-- Website -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang web"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/tv_detail_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorPrimary"
                android:autoLink="web"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                tools:text="https://google.com" />

            <!-- Notes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/tv_detail_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                tools:text="Ghi chú quan trọng" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Custom Fields -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dữ liệu tùy chỉnh"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/layout_detail_custom_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>