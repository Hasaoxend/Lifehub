<?xml version="1.0" encoding="utf-8"?>
<!-- Circular elevated background for icons with gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#15000000" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <!-- Background with gradient -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F5F5F5"
                android:angle="135"
                android:type="linear" />
            <stroke
                android:width="0.5dp"
                android:color="#D0D0D0" />
        </shape>
    </item>
</layer-list>
