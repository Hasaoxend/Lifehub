<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.test.lifehub">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".core.LifeHubApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lifehub"
        tools:targetApi="33">

        <activity
            android:name=".ui.IntroActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Lifehub" />

        <activity
            android:name=".ui.PermissionRequestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Lifehub" />

        <activity
            android:name=".ui.LanguageSelectionActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Lifehub">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.PasscodeSetupActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.RegisterEmailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.RegisterPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".features.one_accounts.ui.AddEditAccountActivity"
            android:exported="false" />

        <activity
            android:name=".features.one_accounts.ui.AccountDetailActivity"
            android:exported="false" />

        <activity
            android:name=".features.two_productivity.ui.AddEditNoteActivity"
            android:exported="false" />

        <activity
            android:name=".features.two_productivity.ui.NotesListActivity"
            android:exported="false" />

        <activity
            android:name=".features.two_productivity.ui.TaskListActivity"
            android:exported="false" />

        <activity
            android:name=".features.two_productivity.ui.CalculatorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".features.two_productivity.ui.WeatherActivity"
            android:exported="false" />

        <activity
            android:name=".features.four_calendar.ui.CalendarActivity"
            android:exported="false" />

        <activity
            android:name=".features.three_settings.ui.ChangePasswordActivity"
            android:exported="false"
            android:label="Đổi mật khẩu"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".features.three_settings.ui.PermissionsSettingsActivity"
            android:exported="false"
            android:label="Quản lý quyền" />

        <!-- Authenticator Activities -->
        <activity
            android:name=".features.authenticator.ui.AuthenticatorActivity"
            android:exported="false"
            android:label="Authenticator" />

        <activity
            android:name=".features.authenticator.ui.AddTotpAccountActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".features.authenticator.ui.QRScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".features.masterpassword.MasterPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.ChangePasscodeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <service
            android:name=".core.services.ReminderService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".core.receivers.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <!-- ===== AUTOFILL SERVICE ===== -->
        <service
            android:name=".core.services.LifeHubAutofillService"
            android:label="@string/app_name"
            android:exported="true"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>
            <meta-data
                android:name="android.autofill"
                android:resource="@xml/autofill_service_configuration" />
        </service>
        
        <!-- Autofill Authentication Activity (Biometric before fill) -->
        <activity
            android:name=".ui.AutofillAuthActivity"
            android:exported="false"
            android:theme="@style/Theme.Lifehub.Autofill"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
        
        <!-- Save Credential Activity (Save new password) -->
        <activity
            android:name=".ui.SaveCredentialActivity"
            android:exported="false"
            android:theme="@style/Theme.Lifehub.Autofill"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
        
        <!-- Autofill Picker Activity (Choose account after biometric) -->
        <activity
            android:name=".ui.AutofillPickerActivity"
            android:exported="false"
            android:theme="@style/Theme.Lifehub.Autofill"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
        
        <!-- Accessibility Autofill Activity (Browser autofill) -->
        <activity
            android:name=".ui.AccessibilityAutofillActivity"
            android:exported="false"
            android:theme="@style/Theme.Lifehub.Autofill"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
        
        <!-- Accessibility Service for Browser Autofill -->
        <service
            android:name=".core.services.LifeHubAccessibilityService"
            android:exported="true"
            android:label="@string/accessibility_service_label"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
            
    </application>

</manifest>